{
  "name": "neko-global",
  "main": "dist/worker.js",
  "scripts": {
    "build": "npm run build:css && NODE_ENV=production remix build",
    "dev": "remix watch",
    "watch:remix": "remix watch",
    "postinstall": "remix setup cloudflare-workers",
    "dev:worker": "esbuild --define:process.env.NODE_ENV='\"development\"' --bundle --sourcemap --outdir=dist ./worker",
    "build:worker": "esbuild --define:process.env.NODE_ENV='\"production\"' --bundle --sourcemap --outdir=dist ./worker",
    "start": "concurrently \"npm run watch:css\" \"npm run miniflare\"",
    "miniflare": "miniflare --build-command \"npm run dev:worker\" --watch",
    "watch:css": "postcss styles --base styles --dir app/styles -w",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "deploy": "npm run build && wrangler publish",
    "clean": "rimraf build/ dist/ .cache/ public/build/",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest",
    "test:watch": "jest --watch",
    "check-types": "tsc",
    "lint": "eslint --ext .js,.mjs,.ts,.tsx .",
    "lint-fix": "npm run lint -- --fix",
    "prettier": "prettier --ignore-path .eslintignore \"**/**/*.+(js|mjs|json|ts|tsx|md|mdx)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "validate": "npm-run-all --parallel check-types check-format lint build"
  },
  "dependencies": {
    "@heroicons/react": "1.0.5",
    "@remix-run/cloudflare-workers": "1.0.5",
    "@remix-run/react": "1.0.5",
    "postcss-nested": "5.0.6",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-error-boundary": "3.1.4",
    "react-player": "2.9.0",
    "react-router-dom": "6.0.2",
    "remix": "1.0.5"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@cloudflare/workers-types": "3.2.0",
    "@remix-run/dev": "1.0.5",
    "@storybook/addon-actions": "6.3.12",
    "@storybook/addon-essentials": "6.3.12",
    "@storybook/addon-links": "6.3.12",
    "@storybook/react": "6.3.12",
    "@tailwindcss/aspect-ratio": "0.3.0",
    "@testing-library/jest-dom": "5.15.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.0.3",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "autoprefixer": "10.4.0",
    "babel-loader": "8.2.3",
    "concurrently": "6.4.0",
    "cssnano": "5.0.11",
    "esbuild": "0.14.0",
    "eslint-config-asjas": "1.0.0",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "lint-staged": "12.1.2",
    "miniflare": "1.4.1",
    "postcss": "8.4.1",
    "postcss-cli": "9.0.2",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-preset-env": "7.0.1",
    "rimraf": "3.0.2",
    "tailwindcss": "2.2.19",
    "ts-jest": "27.0.7",
    "typescript": "4.5.2"
  },
  "engines": {
    "node": ">=14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check-types && lint-staged && npm run build"
    }
  },
  "lint-staged": {
    "*.+(js|mjs|ts|tsx)": [
      "eslint"
    ],
    "**/**/*.+(js|mjs|json|ts|tsx|md|mdx)": [
      "prettier --write",
      "git add"
    ]
  }
}
