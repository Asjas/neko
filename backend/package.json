{
  "name": "neko-cms",
  "scripts": {
    "dev": "keystone-next dev",
    "start": "keystone-next start",
    "build": "keystone-next build",
    "postinstall": "keystone-next postinstall",
    "check-types": "tsc",
    "lint": "eslint --ext .js,.mjs,.ts,.tsx .",
    "lint-fix": "npm run lint -- --fix",
    "prettier": "prettier --ignore-path .eslintignore \"**/**/*.+(js|mjs|json|ts|tsx|md|mdx)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "validate": "npm-run-all --parallel check-types check-format lint build"
  },
  "dependencies": {
    "@keystone-next/auth": "36.0.0",
    "@keystone-next/fields-document": "13.0.0",
    "@keystone-next/keystone": "28.0.0",
    "dotenv": "10.0.0"
  },
  "devDependencies": {
    "@types/dotenv": "8.2.0",
    "eslint-config-asjas": "1.0.0",
    "husky": "7.0.4",
    "lint-staged": "12.0.2",
    "npm-run-all": "4.1.5",
    "typescript": "4.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check-types && lint-staged && npm run build"
    }
  },
  "lint-staged": {
    "*.+(js|mjs|ts|tsx)": [
      "eslint"
    ],
    "**/**/*.+(js|mjs|json|ts|tsx|md|mdx)": [
      "prettier --write",
      "git add"
    ]
  }
}
